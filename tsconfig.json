{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./public/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "**/*js",
    // ".next/types/**/*.ts",
    // "keystatic.config.ts",
    // "src/components/Pricing.tsx",
    // "src/store/store.tsx",
    // "src/app/api/send/route.js",
    // "src/components/ui/button.tsx",
    // "src/components/heroSection.tsx",
    // "src/data/particlesConfig.tsx",
    // "src/components/infniteCustomers.jsx",
    // "src/app/page.tsx",
    // "src/components/custom/bottom.jsx",
    // "src/app/layout.tsx",
    // "src/server-actions.jsx",
    // "src/components/custom/transitionInput.tsx",
    // "src/components/custom/submitButton.jsx",
    // "src/components/email-template.jsx",
    // "src/app/blog/page.tsx",
    // "src/app/teamauth/page.jsx",
    // "src/app/blog/[slug]/page.jsx",
    // "src/app/blog/[slug]/components/customCodeBlock.jsx",
    // "src/sanityImage.jsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
